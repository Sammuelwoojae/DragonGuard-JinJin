<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainActivity"
            type="com.dragonguard.android.activity.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity"
        android:orientation="vertical">

        <!--     기존 타이틀바 제거하고 다는 툴바       -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@android:color/transparent"
            android:gravity="center_vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/search_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="검색"/>

            <EditText
                android:id="@+id/search_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:background="@drawable/search_border"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:id="@+id/search_icon"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_search_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">


            <!-- 화면전환 테스트용 버튼
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="검색화면으로"
                android:id="@+id/btnadd"
                android:textColor="@color/white"
                android:backgroundTint="#222222" />
                -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.08"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:background="@drawable/roundc"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="10dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:orientation="vertical"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_score"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:background="@android:color/transparent"
                            android:textSize="20dp"
                            android:id="@+id/user_tear"
                            android:text="내 티어 : "
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:background="@android:color/transparent"
                            android:textSize="20dp"
                            android:id="@+id/user_token"
                            android:text="내 토큰 : "
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/tear_img"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        android:text="tear"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:orientation="vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/user_rankingbtn"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/roundc">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@android:color/transparent"
                            android:textSize="20dp"
                            android:text="전체 사용자 랭킹"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/user_ranking"
                            android:background="@android:color/transparent"
                            android:textSize="30dp"
                            android:text="등수"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@android:color/transparent"
                            android:textSize="20dp"
                            android:id="@+id/user_percent"
                            android:text="(비율)"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/roundc"
                        android:layout_marginHorizontal="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@android:color/transparent"
                            android:textSize="20dp"
                            android:text="대학교 내 랭킹"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@android:color/transparent"
                            android:textSize="30dp"
                            android:text="등수"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@android:color/transparent"
                            android:textSize="20dp"
                            android:text="(비율)"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.05"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/roundc"
                        android:textSize="20dp"
                        android:text="랭킹 보러가기"
                        android:layout_marginHorizontal="5dp"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/roundc"
                        android:textSize="20dp"
                        android:onClick="@{()->mainActivity.searchRepo()}"
                        android:layout_marginHorizontal="5dp"
                        android:text="레포지토리\n비교하기"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#777777"
            android:layout_weight="0.4" />
    </LinearLayout>
</layout>