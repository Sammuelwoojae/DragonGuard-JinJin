<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/languages_filter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            tools:listitem="@layout/language_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/group_star"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/star_asc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="Star 수 오름차순"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/star_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="Star 수 내림차순"
                    android:textSize="20dp" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/group_fork"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/fork_asc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="Fork 수 오름차순"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/fork_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="Fork 수 내림차순"
                    android:textSize="20dp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:fontFamily="@font/ibm_semibold"
                android:gravity="center"
                android:text="topics 수"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/group_topics"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/zero_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="0"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/one_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="1"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/two_topics"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="2"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/three_topics"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="3"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/fourormore_topics"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="4~"
                    android:textSize="20dp" />



            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="5">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75" />

            <Button
                android:id="@+id/filter_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:fontFamily="@font/ibm_semibold"
                android:text="취소"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/filter_choose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:fontFamily="@font/ibm_semibold"
                android:text="선택"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>