<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/languages_filter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.25"
            android:orientation="vertical"
            tools:listitem="@layout/language_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:fontFamily="@font/ibm_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="star 수"/>
                <RadioGroup
                    android:id="@+id/group_star"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/star_range0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm_semibold"
                        android:text="0~9"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/star_range1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm_semibold"
                        android:text="10~49"
                        android:textSize="17sp" />
                    <RadioButton
                        android:id="@+id/star_range2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm_semibold"
                        android:text="50~99"
                        android:textSize="17dp" />
                    <RadioButton
                        android:id="@+id/star_range3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm_semibold"
                        android:text="100~499"
                        android:textSize="17dp" />
                    <RadioButton
                        android:id="@+id/star_range4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm_semibold"
                        android:text="500~"
                        android:textSize="17dp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:fontFamily="@font/ibm_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="fork 수"/>

                <RadioGroup
                    android:id="@+id/group_fork"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <RadioButton
                        android:id="@+id/fork_range0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm_semibold"
                        android:text="0~9"
                        android:textSize="17sp" />

                    <RadioButton
                        android:id="@+id/fork_range1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm_semibold"
                        android:text="10~49"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/fork_range2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm_semibold"
                        android:text="50~99"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/fork_range3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm_semibold"
                        android:text="100~499"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/fork_range4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm_semibold"
                        android:text="500~"
                        android:textSize="17dp" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:fontFamily="@font/ibm_semibold"
                android:gravity="center"
                android:text="topics 수"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/group_topics"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/topic0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="0"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/topic1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="1"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/topic2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="2"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/topic3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="3"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/topic_over4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ibm_semibold"
                    android:text="4~"
                    android:textSize="17sp" />


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="5">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75" />

            <Button
                android:id="@+id/filter_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:fontFamily="@font/ibm_semibold"
                android:text="취소"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/filter_choose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:fontFamily="@font/ibm_semibold"
                android:text="선택"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>